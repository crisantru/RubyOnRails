<h1 style="text-align:center">Listado de Productos</h1>
<%= link_to 'Nuevo Producto', new_product_path %><br><br>

<style>
table, th, td {

    border: 1px solid black;
    padding: 15px;
}

</style>

<table>
  <tr>
    <th>Vista</th>
    <th>Nombre</th>
    <th>Categoria</th>
    <th>Descripcion</th>
    <th>Especificaciones</th>
    <th>Presentacion</th>

  </tr>

  <% @products.each do |product| %>
    <tr>
      <td align="center"><%= image_tag product.image.url(:thumb) %>
      <td><%= product.nombre %></td>
      <td><%= product.categoria %></td>
      <td><%= product.descripcion %></td>
      <td><%= product.especificaciones %></td>
      <td><%= product.presentacion %></td>
      <td><%= link_to 'Mostrar', product_path(product) %></td>
      <td><%= link_to 'Editar', edit_product_path(product) %></td>
      <td><%= link_to 'Eliminar', product_path(product),
              method: :delete,
              data: { confirm: 'Estas Seguro?' } %></td>
    </tr>
  <% end %>
</table>
