<%= form_for :product, url: products_path do |f| %>

<% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "errore") %> prohiben
        que este articulo sea guardado.
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :Nombre %><br>
    <%= f.text_field :nombre, style: 'width: 35%' %>
  </p>

  <p>
    <%= f.label :Categoria %><br>
    <%= f.select :categoria, options_for_select([['Aplicadores Manuales', 'Aplicadores Manuales'], ['Etiquetas', 'Etiquetas'],
     ['Impresoras de Codigo de Barras', 'Impresoras de Codigo de Barras'], ['Maquinas Etiquetadoras', 'Maquinas Etiquetadoras'],
     ['Ribbons', 'Ribbons'], ['Sujetadores', 'Sujetadores']]) %>
  </p>

  <p>
    <%= f.label :Descripcion %><br>
    <%= f.text_area :descripcion, style: 'resize:none; height: 50px ; display: block; width: 35% ' %>
  </p>

  <p>
    <%= f.label :Especificaciones %><br>
    <%= f.text_area :especificaciones, style: 'resize:none; height: 50px ; display: block; width: 35% ' %>
  </p>

  <p>
    <%= f.label :Presentacion %><br>
    <%= f.text_area :presentacion, style: 'resize:none; height: 50px ; display: block; width: 35% ' %>
  </p>

  <p>
    <%= f.label :Imagen %><br>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit "Guardar Producto"%>
  </p>
<% end %>
