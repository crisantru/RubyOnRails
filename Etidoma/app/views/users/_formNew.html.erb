<div class="page">
    <br><%= link_to '<i class="material-icons md-dark md-48">arrow_back</i>'.html_safe, :back, style: 'margin-left:3%' %>
    <%= link_to '<i class="material-icons md-dark md-48">home</i>'.html_safe, :root %>
    <h2 style="color:black; font-size:36px; text-align:center">Cotizacion</h2>
    <%= image_tag("etidoma.jpg", style: 'float:right; margin-top: 7%; margin-right: 25%; border-radius: 8px;') %>
    <%= form_for(user) do |f| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohiben
          que se pueda enviar la cotización.</h2>

          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div style="margin-left:3%">
        <p>
          <%= f.label :nombre, style: 'font-size: 18px'%><br>
          <%= f.text_field :nombre, style: 'width: 20%; border: 2px solid #765942' %>

        </p>

        <p>
          <%= f.label "Razon Social", style: 'font-size: 18px' %><br>
          <%= f.text_field :razonSocial, style: 'width: 20%; border: 2px solid #765942' %>
        </p>

        <p>
          <%= f.label "Telefono", style: 'font-size: 18px' %><br>
          <%= f.text_field :telefono, style: 'width: 20%; border: 2px solid #765942' %>
        </p>

        <p>
          <%= f.label "email", style: 'font-size: 18px' %><br>
          <%= f.text_field :email, style: 'width: 20%; border: 2px solid #765942' %>
        </p>

        <p>
          <%= f.label "cotizacion", style: 'font-size: 18px' %><br>
          <%= f.text_area :cotizacion, style: 'resize:none; height: 80px ; display: block; width: 30%; border: 2px solid #765942' %>
        </p>

        <p>
          <%= f.submit "Enviar Cotización" %>
        </p><br>
    </div>
    <% end %>
</div>

<style>
  div.page{
    background-color: white;
    width: 80%;
    margin-left: 10%;

    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }
</style>
