<%= stylesheet_link_tag 'pokemons', media: 'all', 'data-turbolinks-track' => true %>
<p id="notice"><%= notice %></p>
<h1 style="font-size:400%; color:red">PokeDex</h1><br>
<%= image_tag("pokebola.png", :title => "", :class => "image") %>
<h2>Lista de Pokemons</h2>

<table  class="responstable">
  <thead>
    <tr>
      <th>ID</th>
      <th></th>
      <th>Nombre</th>
      <th>Apodo</th>
      <th>Peso</th>
      <th>Altura</th>
      <th>Vida</th>



      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>


    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.id %></td>
        <td><%= image_tag pokemon.image.url(:thumb) %></td>
        <td><%= pokemon.nombre %></td>
        <td><%= pokemon.apodo %></td>
        <td><%= pokemon.peso %></td>
        <td><%= pokemon.altura %></td>
        <td><%= pokemon.vida %></td>





        <td><%= link_to 'Ver detalles', pokemon %></td>
      <!--<td><%= link_to 'Editar', edit_pokemon_path(pokemon) %></td>-->
        <td><%= link_to 'Eliminar', pokemon, method: :delete, data: { confirm: 'Estas Seguro de borrar un Pokemon?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>
<%= link_to 'Nuevo Pokemon', new_pokemon_path, class: "btn" %><br>
<br>
<h1>Tipo del Pokemon</h1>

<table  class="responstable">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Tipo</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemonT.each do |poke| %>
    <tr>
      <td><%= poke.id %></td>
      <td><%= poke.nombre %></td>
      <td><%= poke.clase %></td>
    <tr>
    <% end %>
  <tbody>
</table>
