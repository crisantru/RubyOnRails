<%= stylesheet_link_tag 'pokemons', media: 'all', 'data-turbolinks-track' => true %>
<p id="notice"><%= notice %></p>

<h1>Lista de Tipos Pokemon</h1>

<table  class="responstable">
  <thead>
    <tr>

      <th>Clase Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>

        <td><%= type.clase %></td>
        <td><%= link_to 'Eliminar', type, method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Tipo Pokemon', new_type_path, class: "btn" %>
