<%= stylesheet_link_tag "index.css" %>
    
<div class="pagina">
    
    <div class="banner">
        <%= image_tag("sport_performance.png", :alt => "logo") %>
    </div>
    
    <div class="menu">
        <%= render :file => "/public/templates/menu" %>
    </div>
    
    <div class="contenido">
        <article>
            <p id="notice"><%= notice %></p>
            <p><%= link_to "Printable Invoice (PDF)", bill_path(@bill, :format => 'pdf') %></p>
            <%= link_to 'Edit', edit_bill_path(@bill) %> |
            <%= link_to 'Back', bills_path %>

            <% @encabezado.each do |e| %>
            <%= e.Factura %>
            <% end %>
        </article>
    </div>
</div>
