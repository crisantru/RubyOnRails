<%= form_for(@sale) do |f| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class ="forms">
    <table class="table">
        <% tipo_venta = {'Tienda' => 'Tienda', 'Telefónica' => 'Telefónica', 'Internet' => 'Internet' } %>
        <tr>
            <td> <%= f.label 'Tipo de venta', for: 'text', id: "label" %> </td>
            <td>
                <% tipo_venta.each do |tipo| %>
                <%= f.radio_button :sales_type, tipo[1] %>
                <label
                       for="<% tipo[0] %>">
                       <%= tipo[0] %>
                </label>
                <% end %>
            </td>
        </tr>          
        
        <tr>
            <td><%= f.label 'Fecha', for: "text", id: "label"%></td>
            <td class='date_select'> <%= f.date_select :sales_date, start_year: 2010, end_year: 2050, :use_month_numbers => true, :order => [:day, :month, :year] %> </td>
        </tr>
        
        <tr>
            <td><%= f.label 'Cliente', for: "text", id: "label" %></td>
            <td><%= f.select :client_id, @lista_clientes %></td>
            
        </tr>
        
         <tr>
            <td><%= f.label 'Empleado', for: "text", id: "label" %></td>
            <td><%= f.select :staff_id, @lista_empleados %></td>
            
        </tr>
        
    </table>
   
</div>
<hr>
  <div class="actions">
    <%= f.submit 'Generar', class: 'button'%>
  </div>
<% end %>
