<%= stylesheet_link_tag "index.css" %>
    
<div class="pagina">
    
    <div class="banner">
        <%= image_tag("sport_performance.png", :alt => "logo") %>
    </div>
    
    <div class="menu">
        <%= render :file => "/public/templates/menu" %>
    </div>
    
    <div class="contenido">
        <article>

            <h1>Almacen-Existencia</h1>

            <p id="notice">
              <% if notice %>
              <%= notice %><br><br>
              <%= link_to 'Cambiar usuario', root_path, class: 'button'%>
              <hr>
              <% end %>
            </p>

            <table>
              <thead>
                <tr>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @inventories_stocks.each do |inventories_stock| %>
                  <tr>
                    <td><%= link_to 'Show', inventories_stock %></td>
                    <td><%= link_to 'Edit', edit_inventories_stock_path(inventories_stock) %></td>
                    <td><%= link_to 'Destroy', inventories_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'New Inventories stock', new_inventories_stock_path %>
        </article>
    </div>
</div>
