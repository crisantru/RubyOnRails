<%= stylesheet_link_tag "index.css" %>
    
<div class="pagina">
    
    <div class="banner">
       <%= image_tag("sport_performance.png", :alt => "logo") %>
    </div>
    
    <div class="menu">
        <%= render :file => "/public/templates/menu" %>
    </div>
    
    <div class="contenido">
        <article>

            <p id="notice"><%= notice %></p>

            Nombre: <%= @staff.name %><br>
            Apellidos: <%= @staff.last_name %><br>
            Dirección: <%= @staff.address %><br>
            Teléfono: <%= @staff.phone %><br>
            Correo: <%= @staff.email %><br>

            <%= link_to 'Edit', edit_staff_path(@staff) %> |
            <%= link_to 'Back', staffs_path %>
        </article>
    </div>
</div>
