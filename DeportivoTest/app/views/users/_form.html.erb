<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="forms">
      
      <table class="table">
        <tr>
            <td><%= f.label :Usuario, for: "text", id: "label" %></td>
            <td><%= f.text_field :user_name, id: "user_name" %></td>
          
          
        </tr>
        <tr>
            <td> <%= f.label "Contraseña", id: "label" %> </td> 
            <td> <%= f.password_field :password %> </td>
        </tr>
      
        <tr>
            <td> <%= f.label "Confirmar", id: "label" %> </td> 
            <td> <%= f.password_field :password_confirmation %> </td>
        </tr>  
        
        <tr>
            <td><%= f.label "Empleado", for: "text", id: "label" %></td>
            <td><%= f.select :staff_id, @lista_empleados %> </td>
          
          
        </tr>
      
    
      </table>
           
  </div>
    <hr>
  <div class="actions">
    <%= f.submit 'Envíar', class: 'button'%>
  </div>
<% end %>
