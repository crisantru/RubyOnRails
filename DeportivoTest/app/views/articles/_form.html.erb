<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="forms">                      
     <table class="table">
    <tr>
        <td><%= f.label 'Nombre Articulo', for: "text", id: "label" %></td>
        <td><%= f.text_field :name, id: "name" %></td>
        
    </tr>   
    
    <tr>
        <td> <%= f.label 'Categoría', for: 'text', id: "label" %> </td>
        <td> <%= f.select :category, @categoria %> </td>
    </tr>
         
    <tr>
        <td> <%= f.label 'Marca', for: 'text', id: "label" %> </td>
        <td> <%= f.select :patent, @marca %> </td>
    </tr>
         
    <tr>
        <td> <%= f.label 'Modelo', for: 'text', id: "label" %> </td>
        <td> <%= f.text_field :model %> </td>
    </tr>
         
    <tr>
        <td> <%= f.label 'Género', for: 'text', id: "label" %> </td>
        <td> <%= f.select :gender, @genero %> </td>
    </tr>
         
    <tr>
        <td> <%= f.label 'Talla', for: 'text', id: "label" %> </td>
        <td> <%= f.select :size, @talla %> </td>
    </tr>

     <tr>
      <td><%= f.label 'Precio', for: "text", id: "label" %></td>
      <td><%= f.number_field :price, id: "instrucciones" %></td>
    </tr>
         
    <tr>
        <td><%= f.label 'Descripción', for: "text", id: "label" %></td>
        <td><%= f.text_area :description, id: "descripcion" %></td>
    </tr>     
         
    </table>
